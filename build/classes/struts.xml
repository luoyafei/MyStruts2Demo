            	<param name="actionName">mylogin!redirectActionDemo</param>
            	<param name="userName">${userName}</param>
            	<param name="password">${password}</param>
            </result> -->
            <!-- 
            <result type="redirect" name="redirect">
            	<param name="location">/exception.jsp</param>
            	<param name="username">${username}</param>
            	<param name="password">${password}</param>
            </result> -->
        </action>
        
        
        
    </package>
</struts>

